@model E_Commerce.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section Styles

{
    <link href="~/styles/styleNew.css" rel="stylesheet" type="text/css" media="all" />
}

<h1>@ViewBag.Title</h1>

<div class="clear-loading spinner">
    <span></span>
</div>
<div class="w3ls-login box box--big">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="agile-field-txt">
            <label><i class="fa fa-user" aria-hidden="true"></i> Name </label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-user" aria-hidden="true"></i> Username </label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-envelope" aria-hidden="true"></i> Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-phone" aria-hidden="true"></i>Phone Number</label>
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-key" aria-hidden="true"></i>Password</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-key" aria-hidden="true"></i>Confirm Password</label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value=" Register " />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
